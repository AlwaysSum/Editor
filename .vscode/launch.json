{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron With Devtools",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "env": {
                "DEBUG": "true",
                "ONE_WINDOW_AT_A_TIME": "true"
            },
            "args": [
                "--remote-debugging-port=9223",
                "."
            ],
            "outFiles": [
                "build/**/*.js"
            ],
            "sourceMaps": true
        },
        {
            "name": "Attach Electron Renderer",
            "type": "chrome",
            "request": "attach",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "port": 9223,
            "sourceMapPathOverrides": {
                "file://*": "${workspaceRoot}/src/*",
                "file://./*": "${workspaceRoot}/src/*",
            }
        },
        {
            "name": "Electron",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "--remote-debugging-port=9223",
                "."
            ],
            "outFiles": [
                "build/**/*.js"
            ],
            "sourceMaps": true
        },
        {
            "name": "Run Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "sourceMaps": true,
            "args": [
                "${workspaceRoot}/build/test/index.js"
            ],
            "preLaunchTask": "clean-tests",
            "presentation": {
                "hidden": false,
                "group": "test",
                "order": 1
            },
            "console": "internalConsole",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "development"
            },
        }
    ],
    "compounds": [
        {
            "name": "Editor",
            "configurations": [
                "Electron",
                "Attach Electron Renderer"
            ],
        }
    ]
}